{
    "name": "invoice-backend",
    "version": "1.0.0",
    "description": "Backend server for Resonira Invoice System",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "dev": "node --watch index.js",
        "prisma:generate": "npx prisma generate --schema=./prisma/schema.prisma",
        "prisma:migrate": "npx prisma migrate deploy --schema=./prisma/schema.prisma",
        "prisma:migrate:dev": "npx prisma migrate dev --schema=./prisma/schema.prisma",
        "prisma:seed": "node prisma/seed.js",
        "prisma:studio": "npx prisma studio --schema=./prisma/schema.prisma"
    },
    "prisma": {
        "schema": "./prisma/schema.prisma",
        "seed": "node prisma/seed.js"
    },
    "dependencies": {
        "@prisma/client": "^6.5.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "nodemailer": "^6.9.7",
        "pdfkit": "^0.14.0"
    },
    "devDependencies": {
        "prisma": "^6.5.0"
    }
}